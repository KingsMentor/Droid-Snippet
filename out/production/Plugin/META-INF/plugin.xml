<idea-plugin>
    <id>xyz.belvi.droid_snippet</id>
    <name>Droid Snippet</name>
    <version>1.0.0-beta</version>
    <vendor email="nosakharebelvi@gmail.com" url="http://belvi.xyz">Nosakhare Belvi</vendor>

    <description><![CDATA[
      Live Coding Template for Android Studio.<br/>
      Speed up development time by adding access to important android utils snippet.

      <h2>Contributions</h2>

      Send a PR, Suggestions and snippet you used quiet often via

      <a href="https://github.com/KingsMentor/Droid-Snippet">Droid Snippet</a>

      <h2>Credits</h2>

      <a href="https://github.com/Blankj/AndroidUtilCode">AndroidUtilCode </a>
    ]]></description>



    <change-notes><![CDATA[

    <h2>1.0.0-beta</h2>
    <ul>
      <li>Utils</li>
      <li>Network Utils</li>
      <li>Device Utils</li>
      <li>Screen Utils</li>
      <li>Location Utils</li>
      <li>Permission Utils</li>
      <li>Intent Utils</li>
     </ul>

     <h2>1.0.1</h2>
     <ul>
      <li>Service Utils</li>

     </ul>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->


    <idea-version since-build="143.0"/>


    <depends>com.intellij.modules.androidstudio</depends>


    <extensions defaultExtensionNs="com.intellij">
        <defaultLiveTemplatesProvider implementation="xyz.belvi.TemplateProvider"/>
        <liveTemplateContext implementation="xyz.belvi.TemplateContext"/>
    </extensions>

